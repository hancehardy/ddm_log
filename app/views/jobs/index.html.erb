<div class="container">
<h1>DDM Jobs</h1>
  <div class="row">
    <div class="col-9">  
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col">Job Name</th>
            <th scope="col">Contract Amount</th>
            <th scope="col">Contract Date</th>
            <th scope="col">Status</th>


          </tr>
        </thead>
          <tbody>





            <% @jobs.each do |job| %>       
                 <tr>
          
                      <td><%= link_to job.name,job %></td>
                      <td><%= number_to_currency(job.contract_amount) %></td>
                      <td><%= job.contract_date%></td>
                      <td><%= job.status%></td>
                      
                  </tr>
            <% end %>
        </tbody>
      </table>
      </div>
  </div>
  <%= link_to "New Job", new_job_path(@job), :class=>"btn btn-primary btn-sm" %>
</div>
